{
  "name": "@byteatatime/wagmi-svelte",
  "//": "When changing the version, remember to update src/lib/version.ts",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package -o 'dist/lib' && publint",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "files": [
    "package.json",
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "svelte": "./dist/lib/index.js"
    },
    "./chains": {
      "types": "./dist/lib/chains/index.d.ts",
      "svelte": "./dist/lib/chains/index.js"
    },
    "./connectors": {
      "types": "./dist/lib/connectors/index.d.ts",
      "svelte": "./dist/lib/connectors/index.js"
    }
  },
  "devDependencies": {
    "@byteatatime/prettier-config": "^0.1.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.2.7",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tailwindcss/typography": "^0.5.10",
    "@types/eslint": "8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0-next.4",
    "mdsvex": "^0.11.0",
    "postcss": "^8.4.35",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.7",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.4.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.3",
    "vitest": "^1.2.0"
  },
  "type": "module",
  "dependencies": {
    "@tanstack/svelte-query": "^5.22.2",
    "@wagmi/connectors": "^4.1.14",
    "@wagmi/core": "^2.6.5",
    "svelte": "^5.0.0-next.1",
    "viem": "^2.7.11"
  }
}
